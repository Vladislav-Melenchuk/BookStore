@model Project_JS.Models.LoginViewModel

@{
    ViewData["Title"] = "Вхід";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="container-fluid login-layout min-vh-100 d-flex align-items-center">
    <div class="login-left d-none d-md-flex flex-column justify-content-center align-items-start px-5">
        <h1 class="text-light display-5 fw-bold mb-3 animate-slide-left">👋 Вітаємо назад!</h1>
        <p class="text-light fs-5 animate-slide-left animate-delay-1" id="loginMessage">
            
        </p>
    </div>


    <div class="login-right d-flex justify-content-center align-items-center p-5 w-100">
        <div class="login-card bg-dark text-light shadow-lg p-5 rounded-4 animate-fade-in w-100" style="max-width: 420px">
            <div class="text-center mb-4">
                <i class="bi bi-person-circle" style="font-size: 3rem; color: #948979;"></i>
                <h2 class="fw-bold mt-2">Вхід в акаунт</h2>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger text-center mb-4 animate__animated animate__fadeIn">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form asp-action="Login" method="post" id="loginForm" novalidate>
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Ім’я користувача</label>
                    <input asp-for="Username" class="form-control" placeholder="Ваш логін" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Запам’ятати мене</label>
                </div>
                <button type="submit" class="btn btn-custom w-100">Увійти</button>
            </form>

            <div class="mt-4 text-center d-flex flex-column gap-2">
                <a href="/" class="btn btn-outline-light w-100">← Назад на головну</a>
                <a href="/Account/Register" class="btn btn-outline-light w-100">Створити акаунт</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login-valid.js" asp-append-version="true"></script>

    <script>
        const messages = [
            "Поверніться до своїх улюблених книжок, чашки кави та цифрових проєктів.",
            "Читання — це відпочинок для душі та заряд для розуму.",
            "Нова сторінка — нові можливості. Почнімо разом!",
            "Книжки вже чекають на вас. Увійдіть у світ історій.",
            "Гарна кава, цікава книга, спокійний вечір — ідеально!"
        ];

        const messageElement = document.getElementById("loginMessage");
        const randomIndex = Math.floor(Math.random() * messages.length);
        messageElement.textContent = messages[randomIndex];
    </script>
}

